{
  "manifest_version": 2,
  "name": "Cache Cleaner",
  "description": "Cleans your local browser cache of all data older than 1 day.",
  "version": "1.0",
  "incognito": "split",
  "minimum_chrome_version": "19.0.0.0",
  "offline_enabled": false,
  "options_page": "options.html",
  "browser_action": {
    "name":"Cache Cleaner"
  },
  "background": {
     "persistent": true,
     "scripts": [ "background.js" ]
  },
  "permissions": [
    "browsingData",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ]
}
