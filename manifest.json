{
  "manifest_version": 2,
  "name": "Cache Cleaner",
  "description": "Cleans your local browser cache of all data older than 1 day.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
     "persistent": true,
     "scripts": [ "background.js" ]
  },
  "permissions": [
    "browsingData",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ]
}
